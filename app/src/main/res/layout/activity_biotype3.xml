<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E72A2A">

    <TextView
        android:id="@+id/textViewJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="BIODATA DIRI"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Foto Profil"
        android:src="@drawable/fotoproject1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDataDiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA DIRI"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama : Zaidan Hisyam Albatati"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDataDiri"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas : XI PPLG A"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNama"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewNoAbsen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No absen : 36"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewKelas"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat : Griyan, Pajang, Laweyan"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNoAbsen"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewHobi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobi : main game"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlamat"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewPendidikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="PENDIDIKAN"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHobi" />

    <TextView
        android:id="@+id/textViewSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SDN KLECO 1\n MTSN 1 SKA \n SMK NEGERI 2 SKA"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPendidikan"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="366dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:text="NextCount"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="597dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="366dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:text="Kembali"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="661dp" />

</LinearLayout>
